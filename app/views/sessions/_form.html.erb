<%= form_tag session_login_path do |f| %>
<div class="field">
	<%= label_tag :username %>
	<%= text_field_tag :username, params[:username] %>
</div>
<div class="field">
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</div>

<p class="actions"><%= submit_tag "Login", :id => "submit", :name => "submit", :class => "form_submit btn btn-green", :disabled => false, :disable_with => "Please wait..." %></p>
<% end -%>