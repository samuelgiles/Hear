<%= form_tag user_albums_path do |f| %>
  <div class="field">
    <%= label_tag :artist %><br />
    <%= text_field_tag :artist, params[:artist] %>
  </div>
  <div class="field">
    <%= label_tag :title %><br />
    <%= text_field_tag :title, params[:title] %>
  </div>
  <p class="actions">
    <%= submit_tag "Add", :id => "submit", :name => "submit", :class => "btn btn-green", :disabled => false, :disable_with => "Please wait..." %>
  </p>
<% end %>